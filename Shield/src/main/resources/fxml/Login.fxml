<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" spacing="25" id="VBoxLogin" prefHeight="200" prefWidth="320" xmlns:fx="http://javafx.com/fxml" fx:controller="io.ragnarok.shield.FXMLController">
    <children>
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="closeButton" text="X" onAction="#closeStage"/>
        </HBox>
        <TextField fx:id="usernameFieldL" promptText="Username" maxWidth="200"/>
        <PasswordField fx:id="passwordFieldL" promptText="Password" maxWidth="200" onKeyPressed="#handleLoginEnter"/>
        <Button text="Login" onAction="#handleLoginAction" fx:id="loginBtn" />
    </children>
</VBox>
